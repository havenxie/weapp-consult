/**app.wxss**/

page {
    height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;    /*子元素在父元素中的左右对齐方式*/
  justify-content: start; /*子元素在父元素中的上下对齐方式*/
  box-sizing: border-box;
  background-color: rgb(241, 250, 250); 
  position: relative; 
  box-sizing: border-box;
} 
.pages {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-size: 40rpx;
  color: #333;
  /* background-color: #f5f5f5; */
  padding: 8% 3% 8% 3%;
  box-sizing: border-box;
}
button:active {
  color: #ccc;
  opacity: 0.5;
}
picker:active {
  color: #ccc;
  opacity: 0.5;
}
button[disabled]:not([type]) {
  color:rgba(0, 0, 0, 0.5);
  background-color:#ccc;
  font-size: 34rpx;
}
button::after {
  border-width: 0rpx;
}
picker[disabled]:not([type]) {
  color:rgba(0, 0, 0, 0.5);
  background-color:#ccc;
  font-size: 34rpx;
}



/* =============================================================================== */
.news {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  width: 100%;
  /* background-color: rgb(241, 235, 235); */
}

.newitem {
  display: flex;
  flex-direction: row;
  /* border-bottom: 1rpx solid #f5f5f5; */
  padding: 10rpx;
  padding-bottom: 6rpx;
  position: relative;
  /* height: 300rpx; */
}

.newitem .poster {
  width: 240rpx;
  height: 240rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}

.newitem .meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.newitem .meta .title{
  font-size: 30rpx;
  letter-spacing: 1.6rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 6;
  -webkit-box-orient: vertical;
}

.other {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
  color: #fff;
  font-size: 30rpx;
  height: 50rpx;
  padding: 0 10rpx;
  align-self: flex-start;
}
.other .left {
  width: 240rpx;
  font-size: 34rpx;
  text-align: center;
  margin-right: 20rpx;
}
.other .right {
  /* flex: 1;
  display: flex; */
  
}
.other .zhuanti {
  margin-right: 30rpx;
  padding: 0 6rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #de0000;
  border: 1rpx solid #de0000;
  border-radius: 8rpx;
}