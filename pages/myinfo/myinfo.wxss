/* pages/myinfo/myinfo.wxss */
.container {
  background-color: #f0f0f0;
  font-size: 32rpx;
}
.infoBox {
  width: 100%;
}
.infoBox .box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  box-sizing: border-box;
  position: relative;
  padding: 0 32rpx;
  border-bottom: 2rpx solid #e0e0e0;
}
.infoBox .box .title {
  color: #999;
}
.infoBox .box .content {
  color: #333;
}

.infoBox .avatar {
  height: 164rpx;
  background-color: #fff;
  margin-top: 26rpx;
}
.infoBox .avatar .img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}
.modifyBtn {
  width: 50%;
  height: 98rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  border-width: 0rpx;
  background-color: #088;
  color: #fff;
  margin-top: 98rpx;
  /* font-size: 36rpx; */
}