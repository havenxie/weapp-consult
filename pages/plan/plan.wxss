/* pages/schedule/schedule.wxss */
.pages{
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 0;
}
.showbox {
  padding-bottom: 100rpx;
  width: 100%;
}
.itembox{
  width: 100%;
  height: 80rpx;
  border-bottom: 3rpx solid #f5f5f5;
  box-sizing: content-box;
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
}
.datetime{
  font-weight: bold;
  width: 220rpx;
  font-size: 32rpx;
}
.datetime .date{
  text-align: center;
}
.datetime .week{
  text-align: center;
}
.canteen{
  flex: 1;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 32rpx;
}
.warmcolor{
  color: rgb(233, 127, 5);
}
.passcolor{
  color: #52b8f5
}
.warmbgr{
  background-color: rgb(233, 127, 5);
}
.passbgr{
  background-color: #52b8f5;
}
.cancel{
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  /* background-color: rgb(233, 127, 5); */
  color: #fff;
  padding: 0;
  font-size: 34rpx;
  border-radius: 5px;
  opacity: 0.9;
}
.mealbox{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  z-index: 1000;
}
.mealtab {
  width: 34%;
  height: 100%;
  line-height: 100rpx;
  margin-bottom: 0;
  box-sizing: border-box;
  text-align: center;
  background-color: #f5f5f5;
  border-left: 2rpx solid #f5f5f5;
}
.mealtab:first-child {
  border-left: none;
}
.select {
  color: #52b8f5;
  background-color: #fff;
  border-bottom: 10rpx solid #52b8f5;
}
.mealtab:active{
  color: #333;
  opacity: 0.9;
}