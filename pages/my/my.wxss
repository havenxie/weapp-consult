/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 200rpx;
  width: 100%;
  background-color: #fff;
  padding: 0;
  box-sizing: border-box;
  position: relative;
  margin-top: 30rpx;
}

.loadBtn {
  position: absolute;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0);
}
.loadBtn::after {
  border: 0rpx solid rgba(255, 255, 255, 0);
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 0 40rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.right {
  margin-left: auto;
  margin-right: 40rpx;
  width: 60rpx;
  height: 60rpx;
  opacity: 0.5;
}

.usermotto {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 26rpx;
  width: 100%;
  background-color: #fff;
  padding: 26rpx 40rpx;
  box-sizing: border-box;  
}
.usermotto .icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}



/* 自定义弹框 */  
.model{  
  background:#fff;  
  position:fixed;  
  top:33%;  
  z-index:10000;  
  width:73%;  
  /* margin-left:7%;   */
  border-radius: 16rpx;  
}  
.modelTitle{  
  width:100%;  
  height: 100rpx;  
  line-height:100rpx;  
  text-align:center;    
  border-bottom:1px solid #ECECED;  
  color:#222;  
  font-size:34rpx;  
  /* font-family:“微软雅黑”;   */
}  
.modelBody{  
  color:#333;  
  width:91%;  
  height:110rpx;  
  padding:30rpx;  
  font-size:34rpx;  
  line-height:60rpx;  
  padding-left:30rpx;  
  padding-top:40rpx;  
  text-align: center;
  opacity: 0.9;
}  
.btns{  
  position:relative;  
  overflow:hidden;  
  border-top:1px solid #ECECED;  
  color: #098cd8;
}  
.model .btns button{  
  width:100%;  
  display:inline-block;  
  padding:0rpx;  
  background:#fff;  
}  
.model .btns button::after {  
  border: none;  
}  
.model .btns .agree {  
  color:#52b8f5;  
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}  
.mask{  
  width:100%;  
  height:100%;  
  background:rgba(0, 0, 0, .5);  
  position:fixed;  
  top:0;  
}  