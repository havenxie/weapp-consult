/* pages/setting/setting.wxss */
.pages {
  background-color: #fff;
  /* padding: 0; */
  padding-top: 0;
  padding-bottom:  0;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
/* 月历区域开始 */
.datearea {
  width: 100%;
  height: 652rpx;
  /* background-color: red; */
}
/* 月历区域结束 */

/* 指定日信息开始 */
.infoarea {
  width: 100%;
  height: 348rpx;
  border-top: 7rpx solid #f5f5f5;
  /* background-color: #999; */
}
.flexcolumn {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.mealbox{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 116rpx;
  line-height: 116rpx;
  border-top: 3rpx solid #f5f5f5;
}
.mealtxt {
  margin-right: 30rpx;
  font-size: 36rpx;
}
.addrtxt {
  flex: 1;
  font-size: 32rpx;
  line-height:38rpx;
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
}
.microbtn{
    width: 110rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #fff;
    padding: 0;
    margin-left: 20rpx;
    font-size: 36rpx;
    border-radius:5px;
}
.order {
  background-color: #599bf0;
}
.cancel {
  background-color: rgb(233, 127, 5);
}
button[disabled]:not([type]) {
  color:rgba(0, 0, 0, 0.5);
  background-color:#ccc;
}
/* 指定日信息结束 */



/* 特殊按键区域开始 */
.btnarea {
  flex: 1;
  width: 100%;
  border-top: 7rpx solid #f5f5f5;
}
/* 特殊按键区域结束 */
.flexlow{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  padding-top: 30rpx;
}
.littlebtn{
    width: 42%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    /* background-color: rgb(22, 138, 206); */
    background-color: #599bf0;
    padding: 0;
}