/* pages/perfectinfo/perfectinfo.wxss */
.avatar {
  display: flex;          /*设置显示样式**/
  flex-direction:row; 
  align-items: center;    /**子view垂直居中*/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  background-color: #fff;
  width: 100%;
  margin-top: 30rpx;
}
.avatar .img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 30rpx;  
}

.form {
  display: flex;          /*设置显示样式**/
  flex-direction:column; 
  align-items: flex-start;
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  color: #888;
}
.form .items {
  width: 100%;
  height: 112rpx;
  line-height: 112rpx;
  border-bottom: 2rpx solid #eee;
}
.form .name {
  width: 100%;
}
.form .sexRadio {
  color: #333;
}
.form .birthday {

}
.form .getPhoneNum {
  display: flex;          /*设置显示样式**/
  flex-direction: row; 
  align-items: center;
  vertical-align: center; /**垂直居中*/
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}
.form .getPhoneNum .getPhoneBtn {
  margin-right: 0rpx;
  border-radius: 36rpx;
  height: 74rpx;
  line-height: 74rpx;
  padding: 0 30rpx;
  border: 1rpx solid #088;  
  color: #088;
  background-color: #fff;
  font-size: 32rpx;
}

.form .address {

}

.formBtn {
  width: 90%;
  height: 98rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  border-width: 0rpx;
  background-color: #088;
  color: #fff;
  margin-top: 98rpx;
}